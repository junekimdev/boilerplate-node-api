{
  "root": true,
  "env": {
    "node": true
  },
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "warn",
    "semi": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-extra-semi": "error",
    "no-unreachable": "warn",
    "node/no-missing-require": "off"
  }
}
